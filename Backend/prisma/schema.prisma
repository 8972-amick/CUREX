// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DOCTOR
  PATIENT
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  posts     Post[]

  // ✅ Added missing opposite relations for Appointment
  patientAppointments Appointment[] @relation("PatientAppointments")
  doctorAppointments  Appointment[] @relation("DoctorAppointments")

  // ✅ Added role system
  role Role @default(PATIENT)

  // ✅ Added license verification fields (for doctors)
  licenseNumber String?
  isVerified    Boolean @default(false)
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Symptom {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  // ✅ Added missing opposite relation
  diseases DiseaseSymptom[]
}

model Disease {
  id       Int              @id @default(autoincrement())
  name     String
  symptoms DiseaseSymptom[]
}

model DiseaseSymptom {
  id        Int     @id @default(autoincrement())
  disease   Disease @relation(fields: [diseaseId], references: [id])
  diseaseId Int
  symptom   Symptom @relation(fields: [symptomId], references: [id])
  symptomId Int
}

enum AppointmentStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

model Appointment {
  id              Int               @id @default(autoincrement())
  appointmentDate DateTime
  appointmentTime String
  status          AppointmentStatus @default(PENDING)
  createdAt       DateTime          @default(now())

  patient   User @relation("PatientAppointments", fields: [patientId], references: [id])
  patientId Int

  doctor   User @relation("DoctorAppointments", fields: [doctorId], references: [id])
  doctorId Int

  @@index([doctorId, appointmentDate])
}
